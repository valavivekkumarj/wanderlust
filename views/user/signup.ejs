<%layout('/layouts/boilerplate.ejs')-%>

<div class="row mt-3">
<h4 class="col-8 offset-3 mb-3">signup with wanderlust:</h4>

    <div class="col-8 offset-3">
<form method="post" action="/user/signup" novalidate class=" needs-validation">
    <div class="mb-2">
        <label class="form-label"for="username">username: </label>
        <input class="form-control"type="text" name="formdata[username]" id="username" placeholder="john cena" required>
        <div class="invalid-feedback">Please provide valid username. </div></div>
        <div class="mb-2">
            <label class="form-label"for="email">email: </label>
            <input class="form-control"type="email" name="formdata[email]" id="email" placeholder="johncena@gmail.com" required>
            <div class="invalid-feedback">Please provide emailId. </div></div>
            <div class="mb-2">
                <label class="form-label"for="password">password: </label>
                <input class="form-control"type="password" name="formdata[password]" id="password" required>
                <div class="invalid-feedback">Please provide passowrd. </div></div>
                <div class="mb-2">
                <button class="btn btn-success btn-sm" type="submit">SignUp</button></div></form>
               
                <h6 class="page-heading mb-3">Allready a user please login:</h6>
                <div class="mb-2"><a href="/user/login"><button class="btn btn-warning btn-sm" >Login</button></a>  </div>
  
    </div>
</div>